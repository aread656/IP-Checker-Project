const request = require("supertest");
const app = require("../server");
const expect = require("chai").expect;

it("correctly returns good/bad/empty statuses", async () => {
    const res = await request(app)
        .post("/check")
        .send({
            ips: ["127.0.0.1", "100.200.300.400", ""]
        })
        .expect(200);

    expect(res.body.result).to.deep.equal(["good","bad","empty"]);
});